@inherits BabylonCanvasBase

<canvas id=@CanvasId touch-action="none" />

@* Canvas position must not be changed *@
<ShowLoadingComponent Model="Loader" LoadingTemplate="@LoadingTemplate"></ShowLoadingComponent>


@code
{
    #nullable enable
    [Parameter]
    public RenderFragment? LoadingTemplate { get; set; } = builder =>
        {
            builder.OpenElement(0, "span");
            builder.AddContent(1,"Loading...");
            builder.CloseElement();
        };
}
